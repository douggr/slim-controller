{
  "authors": [
    {
      "email": "devel@dl2.tech",
      "homepage": "https://dl2.tech",
      "name": "DL2 IT Services, Ltd"
    }
  ],
  "autoload": {
    "psr-4": {
      "DL2\\Slim\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DL2\\Slim\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "description": "Action Controller extension for the Slim Framework",
  "keywords": [
    "dl2",
    "slim",
    "controller",
    "action controller",
    "microframework",
    "psr7",
    "rest",
    "router"
  ],
  "license": "MIT",
  "name": "dl2/slim-controller",
  "require": {
    "container-interop/container-interop": "^1.2",
    "php": ">= 5.5",
    "psr/http-message": "^1.0",
    "slim/slim": "^3.8"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.3",
    "php": ">= 7",
    "phpmd/phpmd": "^2.6",
    "phpunit/phpunit": "^6.2",
    "slim/php-view": "^2.2",
    "slim/slim": "^3.8",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "scripts": {
    "fix": [
      "@php-cs-fixer:fix",
      "@php-codesniffer:fix"
    ],
    "lint": [
      "phpmd src,tests text phpmd.xml",
      "@php-cs-fixer:lint",
      "@php-codesniffer:lint"
    ],
    "php-codesniffer:fix": "phpcbf -sn",
    "php-codesniffer:lint": "phpcs -s",
    "php-cs-fixer:fix": "php-cs-fixer fix",
    "php-cs-fixer:lint": "php-cs-fixer --dry-run -v fix",
    "test": [
      "@lint",
      "phpunit"
    ]
  },
  "support": {
    "issues": "https://github.com/dl2tech/slim-controller/issues"
  }
}
